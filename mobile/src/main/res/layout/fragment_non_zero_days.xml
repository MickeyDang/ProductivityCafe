<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="mdstudios.productivitycafe.NonZeroDays">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spinnerLabel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/label_text_1"
                android:textColor="#ffffff"
                android:textSize="30sp"/>

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:ignore="NestedWeights"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:id="@+id/nonZeroText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/nonZeroDay"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/nonZeroPercent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_text_1"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/percentageBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/zeroText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/zeroDay"
                    android:textAlignment="textEnd"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>

                <TextView
                    android:id="@+id/zeroPercent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_text_1"
                    android:textAlignment="textEnd"
                    android:textColor="#ffffff"
                    android:textSize="25sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
